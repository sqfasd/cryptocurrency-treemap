{
    "singleQuote": true,
    "trailingComma": "all",
    "printWidth": 100,
    "overrides": [{
            "files": ".prettierrc",
            "options": { "parser": "json" }
        },
        {
            "files": "*.js",
            "options": {
                "printWidth": 120,
                "tabWidth": 2,
                "useTabs": false,
                "singleQuote": true,
                "semi": false,
                "bracketSpacing": true,
                "explicitTypes": "always"
            }
        }
    ]
}
